{
    "variables" : {
        "region" : "",
        "aws_access_key": "",
        "aws_secret_key": "",
	"ssh_username": ""
    },
    "builders" : [
        {
            "type" : "amazon-ebs",
            "profile" : "default",
            "region" : "{{user `region`}}",
			"instance_type" : "t2.micro",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "source_ami" : "ami-09d069a04349dc3cb",
            "ssh_username" : "{{user `ssh_username`}}",
            "ami_name" : "future-jenkins-slave-node",
            "ami_description" : "Amazon Linux Image with Jenkins slave",
            "run_tags" : {
                "Name" : "future-jenkins-slave"
            },
			"ssh_keypair_name" : "key pair",
			"ssh_private_key_file" : "key path"		
          }
    ],
    "provisioners" : [
        {
            "type" : "shell",
            "script" : "./slave-setup.sh",		
            "execute_command" : "sudo -S sh '{{ .Path }}'"
        }
    ]
}